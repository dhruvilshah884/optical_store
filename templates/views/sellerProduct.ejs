<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta Tag -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="BigBazar - Multipurpose Ecommerce HTML Template">

    <meta name="author" content="root">
    <title>BigBazar - Seller Products</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/favicon.png">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">

    <!--  CSS Style -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="/css/animate.min.css">
    <link rel="stylesheet" href="/webfonts/flaticon/flaticon.css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="/css/layerslider.css">
    <link rel="stylesheet" href="/css/template.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/category/optical-shop.css">

    <style>
        .btn-google {
            background-color: #dd4b39;
            color: #fff;
        }

        .btn-google:hover {
            background-color: #cc3c2f;
        }

        .btn-google:focus {
            box-shadow: none;
        }
         /* CSS for buttons */
        .btn-outline-success,
        .btn-outline-danger {
            padding: 3px 10px; /* Adjust padding to decrease button height and width */
            font-size: 14px; /* Adjust font size if necessary */
        }
    </style>

</head>

<body>
    <!-- ==============header start================= -->
    <%- include('../partials/header') %>
        <!-- =====================header end===================== -->

        <!-- breadcrumb -->
        <div class="full-row bg-light py-5">
            <div class="container">
                <div class="row text-secondary">
                    <div class="col-sm-6">
                        <h3 class="mb-2 text-secondary">My Products</h3>
                    </div>
                    <div class="col-sm-6">
                        <nav aria-label="breadcrumb" class="d-flex justify-content-sm-end align-items-center h-100">
                            <ol class="breadcrumb mb-0 d-inline-flex bg-transparent p-0">
                                <li class="breadcrumb-item"><a href="/"><i
                                            class="fas fa-home me-1"></i>Home</a></li>
                                <li class="breadcrumb-item"><a href="/account">Account</a></li>
                                <li class="breadcrumb-item active" aria-current="page">My Products</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- breadcrumb -->
        <br>
        <!-- table start here  -->
        <table class="table table-striped text-center">
            <thead>
                <tr style="background-color: #33c6cc;">
                    <th class="align-middle text-white" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;">Product ID</th>
                    <th class="align-middle text-white" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;">Product Name</th>
                    <th class="align-middle text-white" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;">Product Image</th>
                    <th class="align-middle text-white" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;">Amount</th>
                    <th class="align-middle text-white" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;">Quantity</th>
                    
                    <th class="align-middle text-white" style="border-bottom: 1px solid #dee2e6;">Upload Date</th>
                    <th colspan="2" class="align-middle text-white" style="border-bottom: 1px solid #dee2e6;">Action</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                <tr>
                    <td class="align-middle" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;"><%= product._id %></td>
                    <td class="align-middle" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;"><%= product.product_name %></td>
                    <td class="align-middle" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;"><img src="/uploads/<%= product.product_image1 %>" alt="" style="max-width: 100px; max-height: 100px;"></td>
                    <td class="align-middle" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;">â‚¹<%= product.product_price %></td>
                    <td class="align-middle" style="border-bottom: 1px solid #dee2e6; border-right: 1px solid #dee2e6;"><%= product.product_quantity %></td>
                    
                    <td class="align-middle" style="border-bottom: 1px solid #dee2e6;"><%= product.upload_date.toDateString() %></td>
                    <td class="align-middle" style="border-bottom: 1px solid #dee2e6;"><a href="/edit/<%= product._id %>"><button class="btn btn-outline-success border border-success rounded">Edit</button></a></td>
                    <td class="align-middle" style="border-bottom: 1px solid #dee2e6;"><a href="/delete/<%= product._id %>"><button class="btn btn-outline-danger border border-danger rounded">Delete</button></a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <!-- table ends here  -->
        <br>

        <!-- ============ footer start ======================= -->
        <%- include('../partials/footer') %>
            <!-- ================= footer end ====================== -->

            <!-- Include Scripts -->
            <script src="/js/jquery.min.js"></script>
            <script src="/js/greensock.js"></script>
            <script src="/js/layerslider.transitions.js"></script>
            <script src="/js/layerslider.kreaturamedia.jquery.js"></script>
            <script src="/js/popper.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>
            <script src="/js/owl.carousel.min.js"></script>
            <script src="/js/wow.js"></script>
            <script src="/js/jquery.fancybox.min.js"></script>
            <script src="/js/jquery.countdown.js"></script>
            <script src="/js/paraxify.js"></script>
            <script src="/js/custom.js"></script>

            <!-- Initializing the slider -->
            <script>
                $(document).ready(function () {
                    $('#slider').layerSlider({
                        sliderVersion: '6.0.0',
                        type: 'responsive',
                        responsiveUnder: 0,
                        maxRatio: 1,
                        hideUnder: 0,
                        hideOver: 100000,
                        skin: 'v6',
                        navStartStop: false,
                        skinsPath: '/skins/',
                        height: 960
                    });
                });
            </script>


</body>

</html>