                                    <span>Services:</span>
                                    <ul class="product-services-list">
                                        <li class="product-service-item"> <%= data.return_policy_day %> Day Return Policy</li>
                                        <% if(data.cash_on_delivery === 'yes'){ %>
                                            <li class="product-service-item"> Cash on Delivery available</li>
                                        <% }else{ %>
                                            <li class="product-service-item"> Cash on Delivery not available</li>
                                        <% } %>
